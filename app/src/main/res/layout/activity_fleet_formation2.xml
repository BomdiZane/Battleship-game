<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FleetFormation2">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Fleet Formation"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.437"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Player 2: Place your ships"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.442"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <android.support.v7.widget.GridLayout
        android:id="@+id/fleetFormationCamp2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/fleet_formation_border"
        app:columnCount="10"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:rowCount="10">

        <TextView
            android:id="@+id/textView00"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/fleet_formation_border"
            android:gravity="center_vertical|center_horizontal"
            android:minWidth="32dp"
            android:minHeight="32dp"
            app:layout_column="0"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView01"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/fleet_formation_border"
            android:gravity="center_vertical|center_horizontal"
            android:minWidth="32dp"
            android:minHeight="32dp"
            app:layout_column="1"
            app:layout_row="0" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/fleet_formation_border"
            android:gravity="center_vertical|center_horizontal"
            android:minWidth="32dp"
            android:minHeight="32dp"
            app:layout_column="0"
            app:layout_row="1" />

    </android.support.v7.widget.GridLayout>

    <Button
        android:id="@+id/autoFleetButton2"
        android:layout_width="89dp"
        android:layout_height="36dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.8"
        android:background="@color/colorPrimary"
        android:fadingEdge="horizontal|vertical"
        android:onClick="autoFleetButton2Clicked"
        android:text="auto"
        android:textColor="?attr/colorBackgroundFloating"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.137"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fleetFormationCamp2" />

    <Button
        android:id="@+id/finishFleet1Button"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorPrimary"
        android:onClick="finishFleetButton2Clicked"
        android:text="Continue"
        android:textColor="?attr/colorBackgroundFloating"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.566"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/autoFleetButton2"
        app:layout_constraintVertical_bias="0.161" />

</android.support.constraint.ConstraintLayout>